// Maximum
// max(2, 3) = 3
// max(4, 1) = 4
// primeiro é max true ou falso
max(a: Nat, b: Nat): Bool
 case a {
     zero: Bool.false
     succ: case b {
         zero: Bool.true
         succ: case Nat.sub(a,b) {
             zero: Bool.false
             succ: Bool.true
         }
     }
}

max(a: Nat, b: Nat): Nat
 case a {
     zero: case b {
         zero: Nat.zero
         succ: b
     }
     succ: case b {
         zero: a
         succ: case Nat.sub(a,b){
             zero: case Nat.sub(b,a){
                 zero: a // a = b
                 succ: b
             }
             succ: a
         }
     }
 }
 //solucao alternativa por recursao
 max(a: Nat, b: Nat): Nat  
 case a b{
     zero zero: Nat.zero
     zero succ: b
     succ zero: a
     succ succ : Nat.succ(max(a.pred,b.pred))
 }

// Divides a number by two
hlf(a: Nat): Nat
 case a {
     zero: Nat.zero
     succ: Nat.succ(hlf(Nat.sub(a,2)))
 }
 
